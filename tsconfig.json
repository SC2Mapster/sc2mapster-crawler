{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "outDir": "lib",
    "removeComments": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "tests"
  ]
}